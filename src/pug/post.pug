doctype html
html
  head
    meta(http-equiv="Content-type", content="text/html;charset=utf-8")
    title= htmlWebpackPlugin.options.title
    base(href='http://localhost:3000/')
  body.js-single
    .container
      include ./partials/header.pug

      include ./partials/loop.pug

      section#js-single
        header
          h1.post__title= htmlWebpackPlugin.options.content.attributes.title
        #js-single__body!= htmlWebpackPlugin.options.content.body

      footer.footer(role="contentinfo")
        small.list__item--inline &copy; 2016 pew pew
