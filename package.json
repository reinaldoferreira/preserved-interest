{
  "name": "pi",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "bin": {
    "pi": "./cli/pi.js"
  },
  "scripts": {
    "test": "jest",
    "lint": "standard \"./src/js/*.js\" \"./index.js\"",
    "start": "node index.js -p",
    "dev": "nodemon --watch ./content/ -e md index.js",
    "build": "npm-run-all js:build css:build start",
    "server:dev": "browser-sync start --ss ./dist/ --directory --server --files **/**/*",
    "js:dev": "rollup -c -w",
    "js:build": "rollup -c -p",
    "css:dev": "stylus ./src/stylus --out ./dist/  -w -u axis -u rupture -u typographic",
    "css:build": "stylus ./src/stylus --out ./dist/ --compress  -u axis -u rupture -u typographic",
    "serve": "npm-run-all -p *:dev dev",
    "clean": "postcss --use autoprefixer dist/*.css -d dist/"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "axis": "^1.0.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "browser-sync": "^2.18.7",
    "front-matter": "^2.1.2",
    "imagemin": "^5.2.2",
    "imagemin-webp": "^4.0.0",
    "inquirer": "^3.0.1",
    "jest": "^18.1.0",
    "moment": "^2.17.1",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.1",
    "pug": "^2.0.0-beta11",
    "rollup": "^0.41.4",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-json": "^2.1.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-watch": "^3.2.2",
    "rupture": "^0.6.2",
    "standard": "^8.6.0",
    "stylus": "^0.54.5",
    "typographic": "^3.0.0",
    "uncss": "^0.14.1",
    "yargs": "^6.6.0"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "rambda": "^0.5.2"
  }
}
